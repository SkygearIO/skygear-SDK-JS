{
  "include": [
    "packages/*/lib/**/*.js",
    "packages/*/lib/**/*.ts",
    "packages/*/test/**/*.js",
    "packages/*/test/**/*.ts"
  ],
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ]
  }
}
